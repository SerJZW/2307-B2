<Window x:Class="Prac1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Prac1"
        mc:Ignorable="d"
        Title="Prac" Height="1080" Width="1920">
    <!--Контейнер для компонентов, в нем должны лежать все обьекты!!!-->
    <!--Еще один ВАЖНЫЙ момент, не задавайте обычные высоту и ширину, давайте компонентам MinHeight и MinWidth, чтобы компоненты отображались корректно на разных разрешениях-->
    <Grid>
        <!--Разбитие рабочего пространства на блоки(колонки и строки)-->
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0.5*"/>
            <ColumnDefinition Width="3*"/>
            <ColumnDefinition Width="0.5*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="0.5*"/>
            <RowDefinition Height="3*"/>
            <RowDefinition Height="0.5*"/>
        </Grid.RowDefinitions>

        <!--Панель для расположения элементов в столбец или строку-->
        <StackPanel Name="Header" Orientation="Horizontal" Grid.Row="0" Grid.ColumnSpan="3" Background="LightGray">
            <Label Content="Libary" FontFamily="Times New Roman" FontSize="36pt" FontStyle="Italic" HorizontalAlignment="Center" VerticalAlignment="Center"/>
            <!--Чтобы создать кнопку со скругленными углами нужно ее обернуть в компонент Border, а так же сделать толщину рамок у кнопки значением 0 и заливку бесцветной-->
            <Border HorizontalAlignment="Center" VerticalAlignment="Center" CornerRadius="20" BorderThickness="2" BorderBrush="Black">
                <Button Content="Количество книг" Background="Transparent" BorderThickness="0" BorderBrush="Transparent" HorizontalAlignment="Center" VerticalAlignment="Center" MinHeight="70px" MinWidth="120px"/>
            </Border>
            <!--Это обычные кнопки с атрибутами на изменение шрифта без скругленных углов-->
            <Button Content="Список книг" x:Name="Btn1" Click="Btn1_Click" Background="Transparent" BorderThickness="2" BorderBrush="Black" HorizontalAlignment="Center" VerticalAlignment="Center" MinHeight="70px" MinWidth="120px"/>
            <Button x:Name="Btn2" FontStyle="Italic" Content="Нажми меня" HorizontalAlignment="Center" VerticalAlignment="Center" Click="Btn2_Click" MinHeight="70px" MinWidth="120px" BorderBrush="Black"  BorderThickness="2"/>
            <TextBox x:Name="TB1"/>
        </StackPanel>
        <StackPanel Grid.Column="0" Grid.Row="1">
            <TextBlock TextWrapping="Wrap"> Взаимодействие со списком</TextBlock>
            <!--x:Name нужен для использования Графического компонента в коде(наделения его функциями или атрибутами)-->
            <!--Атрибут Click нужен для вызова метода(то, что должна сделать кнопка)-->
            <Button x:Name="BtnAdd" MinHeight="30px" Content="Добавить" ToolTip="Добавление новой книги" MinWidth="100px" Margin="10,10,10,10" HorizontalAlignment="Left" Click="Btn1_Click"/>
            <Button MinHeight="30px" Content="Изменить" ToolTip="Изменение книги которая находится в списке" MinWidth="100px" Margin="10,10,10,10" HorizontalAlignment="Left"/>
            <Button MinHeight="30px" Content="Удалить" ToolTip="Удаление книги из списка" MinWidth="100px" Margin="10,10,10,10" HorizontalAlignment="Left"/>
        </StackPanel>
       
        <!--Если путь указан верно, но картинка все равно не отображается,не забудьте перейти в свойтва картинки и в действиях при сборке поставить Ресурс;)-->
        <!--<Image Source="/cat.png"/>-->
        <ScrollViewer Grid.Row="1" Grid.Column="1">
            <DataGrid Margin="20,20,20,20" MaxHeight="500px" Grid.Row="1" Grid.Column="1" x:Name="Persons" AutoGenerateColumns="False" ItemsSource="{Binding Person}" MinColumnWidth="35">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="ID" Binding="{Binding Path = Id}"></DataGridTextColumn>
                    <DataGridTextColumn Header="Name" Binding="{Binding Path = Name}"></DataGridTextColumn>
                    <DataGridTextColumn Header="Age" Binding="{Binding Path = Age}"></DataGridTextColumn>
                    <DataGridTextColumn Header="Description" Binding="{Binding Path = Description}"></DataGridTextColumn>
                </DataGrid.Columns>
            </DataGrid>
        </ScrollViewer>

    </Grid>
</Window>
